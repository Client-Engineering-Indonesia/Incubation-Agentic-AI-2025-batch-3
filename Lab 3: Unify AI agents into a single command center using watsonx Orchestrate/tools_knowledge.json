{
  "openapi": "3.0.3",
  "info": {
    "title": "Watsonx Ask API",
    "version": "1.0.0",
    "description": "API to send user queries to Watsonx and retrieve assistant responses with references."
  },
  "servers": [
    {
      "url": "http://52.118.184.217:8080"
    }
  ],
  "paths": {
    "/ask_watsonx": {
      "post": {
        "summary": "Ask Watsonx a question",
        "description": "Sends a user query to Watsonx deployment and returns assistant's response with reference documents.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "how to get the IAM Apikey"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response from Watsonx",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "choices": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "index": {
                            "type": "integer",
                            "example": 0
                          },
                          "message": {
                            "type": "object",
                            "properties": {
                              "content": {
                                "type": "string",
                                "example": "To get the IAM API key, ..."
                              },
                              "role": {
                                "type": "string",
                                "enum": ["assistant", "user"],
                                "example": "assistant"
                              }
                            }
                          },
                          "reference_documents": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "metadata": {
                                  "type": "object",
                                  "properties": {
                                    "document_id": {
                                      "type": "string",
                                      "example": "fm_custom_models.html"
                                    },
                                    "sequence_number": {
                                      "type": "array",
                                      "items": {
                                        "type": "integer"
                                      },
                                      "example": [20, 21, 22]
                                    }
                                  }
                                },
                                "page_content": {
                                  "type": "string",
                                  "example": "metadata = { client.deployments.ConfigurationMetaNames.NAME..."
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
